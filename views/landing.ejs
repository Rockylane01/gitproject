<!-- Null acct_in or acct_out for a transaction should be displayed as "outside source" -->
<!-- Don't allow "outside source" to show up as an option for either if the other selected source is "outside source" -->
<!-- negative balances are fine since these are budget accounts not bank accounts -->
<!-- The database doesn't calculate account totals -- these must be calculated as part of the route for each transfer. -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Budget Dashboard</title>
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-left">
            <h1>MyBudget</h1>
        </div>
        <nav class="header-right">
            <a href="/users" class="nav-link">User Admin</a>
            <a href="accounts" class="nav-link">Accounts</a>
            <a href="/logout" class="nav-link logout">Logout</a>
        </nav>
    </header>

    <!-- Welcome Message -->
    <section class="welcome-section">
        <h2>Hi, Name</h2>
    </section>

    <!-- Overview Section -->
    <section class="overview">
        <div class="overview-card income">
            <h3>Monthly Income</h3>
            <p>$0.00</p>
        </div>
        <div class="overview-card expenses">
            <h3>Monthly Expenses</h3>
            <p>$0.00</p>
        </div>
        <div class="overview-card net">
            <h3>Net for the Month</h3>
            <p>$0.00</p>
        </div>
    </section>

    <!-- Transactions Section -->
    <section class="transactions">
        <div class="transactions-header">
            <h3>Recent Transactions</h3>
            <button class="add-btn">+ Add Record</button>
        </div>

        <div class="transactions-table-container">
            <table class="transactions-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Amount</th>
                        <th>Description</th>
                        <th>Account</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td class="positive">+$500</td>
                        <td>Freelance work</td>
                        <td class="account-input-cell">
                            <select name="account" id="account">
                                <option value="Income">Income</option>
                                <option value="Gas">Gas</option>
                                <option value="Food">Food</option>
                                <option value="School">School</option>
                                <option value="Housing">Housing</option>
                                <option value="Phone">Phone</option>
                                <option value="Insurance">Insurance</option>
                                <option value="Medical">Medical</option>
                                <option value="Misc">Misc</option>
                            </select>
                        </td>
                        <td>
                            <button class="edit-btn">Edit</button>
                            <button class="delete-btn">Delete</button>
                        </td>
                    </tr>
                    <!-- Future rows can be added here -->
                </tbody>
            </table>
        </div>
    </section>
</body>
</html>
