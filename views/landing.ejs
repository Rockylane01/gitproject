<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Budget Dashboard</title>
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
    <%- include('partials/header') %>

    <!-- Welcome Message -->
    <section class="welcome-section">
        <h2>Hi, <%= user.first_name %></h2>
    </section>

    <!-- Error Message -->
    <% if (typeof error_message !== 'undefined' && error_message) { %>
        <div class="alert alert-danger text-center"><%= error_message %></div>
    <% } %>

    <!-- Overview Section -->
    <section class="overview">
        <div class="overview-card income">
            <h3>Monthly Income</h3>
            <p>$<%= monthlyIncome %></p>
        </div>
        <div class="overview-card expenses">
            <h3>Monthly Expenses</h3>
            <p>$<%= monthlyExpenses %></p>
        </div>
        <div class="overview-card net">
            <h3>Net for the Month</h3>
            <p>$<%= net %></p>
        </div>
    </section>

    <!-- Transactions Section -->
    <section class="transactions">
        <div class="transactions-header">
            <h3>Recent Transactions</h3>
            <a href="/addEditTransaction" class="add-btn">+ Add Record</a>
        </div>

        <div class="transactions-table-container">
            <table class="transactions-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Amount</th>
                        <th>Description</th>
                        <th>Account</th>
                        <th>Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% if (transactions && transactions.length > 0) { %>
                        <% transactions.forEach((transaction, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td class="<%= transaction.to_account ? 'positive' : 'negative' %>">
                                    <%= transaction.to_account ? '+' : '-' %>$<%= transaction.amount %>
                                </td>
                                <td><%= transaction.description || 'N/A' %></td>
                                <td>
                                    <%= transaction.from_account || transaction.to_account || 'N/A' %>
                                </td>
                                <td><%= new Date(transaction.date).toLocaleDateString() %></td>
                                <td>
                                    <a href="/addEditTransaction?transactionid=<%= transaction.transactionid %>" class="edit-btn">Edit</a>
                                    <form method="POST" action="/deleteTransaction/<%= transaction.transactionid %>" style="display: inline;">
                                        <button type="submit" class="delete-btn"
                                                onclick="return confirm('Are you sure you want to delete this transaction?')">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center text-muted">No transactions found.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </section>
</body>
</html>
