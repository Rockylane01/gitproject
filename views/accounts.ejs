<!-- Don't show delete button if the account is "Unallocated Funds" -->
<!-- On account deletion, look up account balance, transfer balance to "Unallocated Funds" account for the relevant user, THEN delete account -->

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Your Accounts</title>

    <!-- If you're using Bootstrap, this is optional -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/styles.css">
    <style>
        .account-card {
            border-radius: 20px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .account-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.15);
        }

    </style>
</head>

<body>
    <!-- NAVBAR OR HEADER -->
     <header class="header">
        <div class="header-left">
            <h1>MyBudget</h1>
        </div>
        <nav class="header-right">
            <a href="/users" class="nav-link">User Admin</a>
            <a href="/accounts" class="nav-link">Accounts</a>
            <a href="/logout" class="nav-link logout">Logout</a>
        </nav>
    </header>

    <div class="container mt-4">
        <h2 class="mb-3 text-center">Your Budget Accounts</h2>

        <!-- Back to landing page -->
        <div class="text-center mb-4">
            <a href="/" class="btn btn-outline-primary btn-sm-pill">Back</a>
        </div>

        <!-- Accounts Grid -->
        <div class="row g-4">
            <% accounts.forEach(account => { %>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card shadow-sm account-card h-100">
                        <div class="card-body text-center">
                            <h5 class="card-title"><%= account.acct_name %></h5>

                            <a href="/accounts/<%= account.acct_name %>" class="btn btn-primary mt-3">
                                View
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

</body>
</html>
