<!-- Don't show delete button if the account is "Unallocated Funds" -->
<!-- On account deletion, look up account balance, transfer balance to "Unallocated Funds" account for the relevant user, THEN delete account -->

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Your Accounts</title>

    <!-- If you're using Bootstrap, this is optional -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/styles.css">
    <style>
        .account-card {
            border-radius: 20px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .account-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.15);
        }

    </style>
</head>

<body>
    <%- include('partials/header') %>

    <div class="container mt-4">
        <h2 class="mb-3 text-center">Your Budget Accounts</h2>

        <!-- Add Account Button -->
        <div class="text-center mb-4">
            <a href="/addEditAccount" class="btn btn-success me-2">+ Add Account</a>
        </div>

        <!-- Error Message -->
        <% if (typeof error_message !== 'undefined' && error_message) { %>
            <div class="alert alert-danger text-center"><%= error_message %></div>
        <% } %>

        <!-- Accounts Grid -->
        <div class="row g-4">
            <% if (accounts && accounts.length > 0) { %>
                <% accounts.forEach(account => { %>
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <div class="card shadow-sm account-card h-100">
                            <div class="card-body text-center">
                                <h5 class="card-title"><%= account.name %></h5>
                                <p class="card-text text-muted">Balance: $<%= account.balance %></p>
                                <div class="d-flex justify-content-center gap-2 mt-3">
                                    <a href="/addEditAccount?accountid=<%= account.id %>" class="btn btn-outline-primary btn-sm">
                                        Edit
                                    </a>

                                    <% if (account.name.toLowerCase() !== "unallocated funds") { %>
                                        <form method="POST" action="/deleteAccount/<%= account.id %>" style="display: inline;">
                                            <button type="submit" class="btn btn-outline-danger btn-sm"
                                                    onclick="return confirm('Are you sure you want to delete this account?')">
                                                Delete
                                            </button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12">
                    <div class="text-center">
                        <p class="text-muted">No accounts found. <a href="/addEditAccount">Create your first account</a>.</p>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

</body>
</html>
